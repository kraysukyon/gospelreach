@inherits LayoutComponentBase

<div class="page">
    <nav class="sidebar">
        <!--Header Section-->
        <div class="side-head d-flex flex-row justify-content-start gap-2 align-items-center">
            <i class="bi bi-list fs-1 menu me-2" @onclick="ToggleSidebar"></i>
            <img src="https://i.ibb.co/xKkFxdh2/path4.png" />
            <div class="ms-1">
                <h5 class="fw-bold">TSA Mandaue</h5>
                <p class="fw-light c2" style="font-size: 12px;">Church Management</p>
            </div>
        </div>

        <!--Navbar Section-->
        <div class="side-content @(isSidebarVisible ? "show" : "hide")">
            <NavBar OnActiveChanged="HideSideBar"/>
        </div>
    </nav>

    <!--Main Body Section-->
    <main class="main-body">
        @Body

        <div class="notificationModal">
            <Toast />
        </div>
    </main>
</div>




<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool isSidebarVisible = false;

    private void ToggleSidebar()
    {
        isSidebarVisible = !isSidebarVisible;
    }

    private void HideSideBar()
    {
        isSidebarVisible = false;
    }
}