@code {
    private bool isLoginModalVisible = false;
    private bool isSidebarVisible = false;

    //variables for authentication
    private string email = string.Empty;
    private string password = string.Empty;
    private List<Accounts> accounts = new();

    protected override async Task OnInitializedAsync()
    {
        if (Auth.IsLoggedIn)
        {
            await FirebaseAuthService.LogoutAsync(); // Ensure user is logged out on initialization
        }
    }

    private void showOption()
    {
        isSidebarVisible = !isSidebarVisible;
    }

    private void showLogin()
    {
        isSidebarVisible = false;
        isLoginModalVisible = !isLoginModalVisible;
    }

    private void closeModal()
    {
        isLoginModalVisible = false;
        isSidebarVisible = false;
    }

    private async Task ValidateLogin()
    {
        try
        {
            var result = await FirebaseAuthService.LoginAsync(email, password);
            if (result.Success)
            {
                accounts = new(); // Reset accounts list
                accounts = await Firestore.GetAccountAsync(); // Fetch accounts from Firebase

                var userStatus = accounts.FirstOrDefault(u => u.email == email && u.stats == "Disabled");
                if (userStatus != null)
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Your account is disabled. Please contact the administrator."); // Show alert for disabled accounts
                    return;
                }

                await JSRuntime.InvokeVoidAsync("alert", result.Message);
                NavigationManager.NavigateTo("/dashboard"); // Redirect to dashboard after login
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", result.Message); // Show error message
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"An error occurred: {ex.Message}"); // Handle any exceptions
        }

    }

}